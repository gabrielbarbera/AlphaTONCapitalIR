  border-color: var(--primary);
}

.bg-alphaton-primary\/20 {
  background-color: rgba(62, 123, 250, 0.2);
}

.bg-alphaton-primary\/30 {
  background-color: rgba(62, 123, 250, 0.3);
}

.text-alphaton-primary\/20 {
  color: rgba(62, 123, 250, 0.2);
}

.font-redhat {
  font-family: "Red Hat Display", system-ui, -apple-system, BlinkMacSystemFont,
    "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

/* Blob animation classes */
.blob-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  overflow: hidden;
}

.blob-svg {
  width: 100%;
  height: 100%;
  opacity: 0.3;
}

.blob-path {
  fill: url(#blobGradient);
  animation: blobFloat 20s ease-in-out infinite;
}

@keyframes blobFloat {
  0%,
  100% {
    transform: translate(0, 0) scale(1);
  }
  25% {
    transform: translate(20px, -20px) scale(1.1);
  }
  50% {
    transform: translate(-20px, 20px) scale(0.9);
  }
  75% {
    transform: translate(20px, 20px) scale(1.05);
  }
}

/* Spinner animation */
.alphaton-spinner {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 2px solid rgba(62, 123, 250, 0.3);
  border-radius: 50%;
  border-top-color: var(--primary);
  animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* Navigation link styles */
.nav-link {
  position: relative;
  transition: all 0.3s ease;
}

.nav-link.active {
  color: var(--primary);
}

.nav-link.active::after {
  content: "";
  position: absolute;
  bottom: -2px;
  left: 0;
  right: 0;
  height: 2px;
  background: var(--primary);
  border-radius: 1px;
}

/* Newsletter form styles */
.newsletter-form {
  max-width: 400px;
  margin: 0 auto;
}

